{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper row3">
        <main class="hoc container clear"> 
            <div class="btmspace-50">
                <h2 class="heading">Lista de facturas</h2>

                <table>
                    <thead>
                        <tr>
                            <th>Fecha</th>
