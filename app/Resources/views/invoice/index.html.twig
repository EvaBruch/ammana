{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper row3">
        <main class="hoc container clear"> 
            <div class="btmspace-50">
                <table>
                    <thead>
                        <tr>
                            <th>{{ i18n.es.invoices_page.headers.date }}</th>
                            <th>{{ i18n.es.invoices_page.headers.number }}</th>
                            <th>{{ i18n.es.invoices_page.headers.download }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for invoice in invoices %}
                        <tr>
                            <td>{{ invoice.emittedAt | date('d/m/Y') }}</td>
                            <td>{{ invoice.number }}</td>
                            {% if invoice.url %}
                                <td><a href="{{ invoice.url }}" target="_blank" rel="noopener">{{ i18n.es.invoices_page.download }}</a></td>
                            {% else %}
                                <td>{{ i18n.es.invoices_page.no_invoice }}</td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
            <div class="clear"></div>
        </main>
    </div>
{% endblock %}
