<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <title>{% block title %}{{ i18n.es.metadata.page_title }}{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets '@AppBundle/Resources/public/css/*' filter='cssrewrite' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Muli:200,400,800" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Merriweather" rel="stylesheet">
    </head>

    <body id="top">
        <header id="masthead" class="site-header zeres-header" role="banner">
            <div class="navigation-top zeres-header">
                <div class="wrap zeres-header">
                    <nav id="site-navigation" class="main-navigation zeres-header" role="navigation" aria-label="Top Menu">
                        <div class="wrap zeres-header">
                            <a class="logo" href="{{ path('app') }}">
                                <img src="/images/logo.png" width="160px" alt="ammana.es">
                            </a>
                            <div class="menu-principal-container">
                                <ul id="top-menu" class="menu">
                                {% if not app.session.get('user') %}
                                    <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                                        <i class="fa fa-sign-in"></i> <a href="{{ path('user_login') }}">{{ i18n.es.menus.new_user.login }}</a>
                                    </li>
                                    <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                                        <i class="fa fa-user-plus"></i> <a href="{{ path('register_user') }}">{{ i18n.es.menus.new_user.register }}</a>
                                    </li>
                                {% endif %}
                                {% if app.session.get('user') %}
                                    {% for option in app.session.get('menu') %}
                                    <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                                        <i class="fa {{ option.icon }}"></i> <a href="{{ path(option.path) }}">{{ option.text }}</a>
                                    </li>
                                    {% endfor %}
                                {% endif %}
                                </ul>
                            </div>
                        </div>
                    </nav><!-- #site-navigation -->
                </div><!-- .wrap -->
            </div><!-- .navigation-top -->
        </header>

        <div class="wrapper row1">
            <header id="header" class="hoc clear"> 
                <div id="logo" class="fl_left">
                    <h1><a href="{{ path('app') }}">{{ i18n.es.metadata.name }}</a></h1>
                    <p>{{ i18n.es.metadata.slogan }}</p>
                </div>
                <nav id="mainav" class="fl_right">
                    <ul class="clear">
                        <li class="active"><a href="">{{ i18n.es.menus.new_user.home }}</a></li>
                        <li><a class="drop" href="#">{{ i18n.es.menus.new_user.protocols }}</a>
                            <ul>
                                <li><a href="">{{ i18n.es.menus.new_user.protocol_uso_redes }}</a></li>
                                <li><a href="">{{ i18n.es.menus.new_user.protocol_uso_telematica }}</a></li>
                                <li><a href="">{{ i18n.es.menus.new_user.protocol_uso_mensajeria }}</a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </header>
        </div>

        {% block body %}
        {% endblock %}

        <a id="backtotop" href="#top"><i class="fa fa-chevron-up"></i></a>

        {% block javascripts %}
            {% javascripts '@AppBundle/Resources/public/js/*' filter='uglifyjs2' %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
