{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper row3">
        <main class="hoc container clear"> 
            <div class="btmspace-50">
                <h2 class="heading">Lista de usuarios</h2>

                <table>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Activo</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Nombre de compañía</th>
                            <th>CIF</th>
                            <th>Domicilio social</th>
                            <th>Persona de contacto</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path('user_edit', { 'id': user.id }) }}">{{ user.id }}</a></td>
                            <td>
                                {% if user.enabled %}
                                    Sí
                                {% else %}
                                    No
                                {% endif %}
                            </td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.password }}</td>
                            <td>{{ user.companyName }}</td>
                            <td>{{ user.cif }}</td>
                            <td>{{ user.address }}</td>
                            <td>{{ user.contactPerson }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('register_user') }}">Nuevo usuario</a>
                    </li>
                </ul>

            </div>
            <div class="clear"></div>
        </main>
    </div>
{% endblock %}
