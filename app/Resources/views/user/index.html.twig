{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper row3">
        <main class="hoc container clear"> 
            <div class="btmspace-50">

                <table>
                    <thead>
                        <tr>
                            <th>{{ i18n.es.user_list_page.headers.id }}</th>
                            <th>{{ i18n.es.user_list_page.headers.active }}</th>
                            <th>{{ i18n.es.user_list_page.headers.email }}</th>
                            <th>{{ i18n.es.user_list_page.headers.company_name }}</th>
                            <th>{{ i18n.es.user_list_page.headers.cif }}</th>
                            <th>{{ i18n.es.user_list_page.headers.address }}</th>
                            <th>{{ i18n.es.user_list_page.headers.contact_person }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path('user_edit', { 'id': user.id }) }}">{{ user.id }}</a></td>
                            <td>
                                {% if user.enabled %}
                                    {{ i18n.es.user_list_page.is_active.yes }}
                                {% else %}
                                    {{ i18n.es.user_list_page.is_active.no }}
                                {% endif %}
                            </td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.companyName }}</td>
                            <td>{{ user.cif }}</td>
                            <td>{{ user.address }}</td>
                            <td>{{ user.contactPerson }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('register_user') }}">{{ i18n.es.user_list_page.new_user }}</a>
                    </li>
                </ul>

            </div>
            <div class="clear"></div>
        </main>
    </div>
{% endblock %}
