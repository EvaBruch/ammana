{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper row3">
        <main class="hoc container clear"> 
            <div class="btmspace-50">
                <h2 class="heading">Protocolos pendientes de cobro</h2>

                {% if protocols %}
                    <table>
                        <thead>
                            <tr>
                                <th>Protocolo</th>
                                <th>Cliente</th>
                                <th>Fecha pedido</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for protocol in protocols %}
                            <tr>
                                <td>{{ names[protocol.identifier] }}</td>
                                <td>{{ users[protocol.user].companyName }} ({{ users[protocol.user].email }})</td>
                                <td></td>
                                <td><a href="">Marcar como cobrado</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>
                        No hay ning√∫n pedido pendiente de cobro.
                    </p>
                {% endif %}

            </div>
            <div class="clear"></div>
        </main>
    </div>
{% endblock %}
