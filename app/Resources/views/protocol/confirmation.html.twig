{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper row3">
        <main class="hoc container clear"> 
            <div class="btmspace-50">
                <h2 class="heading">Comprar {{ protocol.name }}</h2>
                <p style="color: red">
                    Por favor, revisa tus respuestas y confirma que son correctas.
                </p>
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <input type="hidden" name="confirmed" value="true">
                    <input class="btn" type="submit" value="Confirmar">
                    <a href="{{ path('protocol_buy', { 'id': protocol.id }) }}">Cancelar</a>
                {{ form_end(form) }}
            </div>
            <div class="clear"></div>
        </main>
    </div>
{% endblock %}

