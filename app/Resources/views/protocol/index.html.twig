{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper row3">
        <main class="hoc container clear"> 
            <div class="btmspace-50">
                <h2 class="heading">Lista de protocolos</h2>

                {% if protocols %}
                    <table>
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for protocol in protocols %}
                            <tr>
                                <td>{{ names[protocol.identifier] }}</td>
                                {% if protocol.enabled %}
                                    <td><a href="{{ path('protocol_download', { 'id': protocol.id }) }}">Descargar</a></td>
                                {% else %}
                                    <td>No disponible (<a href="{{ path('protocol_pay', { 'id': protocol.id }) }}">paga!</a>)</td>
                                {% endif %}
                                {% if invoices[protocol.id] %}
                                    <td><a href="{{ invoices[protocol.id].url }}" target="_blank">Descargar factura</a></td>
                                {% else %}
                                    <td>Factura no disponible</td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>
                        No tienes ningún protocolo todavía. ¿Por qué no escoges alguno de la siguiente lista?
                    </p>
                {% endif %}

                <h3 class="heading">Comprar protocolos</h2>
                <table>
                    <tbody>
                        {% for protocol in to_buy %}
                            <tr>
                                <td>{{ protocol.name }}</td>
                                <td><a href="{{ path('protocol_buy', { 'id': protocol.id }) }}">Comprar</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
            <div class="clear"></div>
        </main>
    </div>
{% endblock %}
