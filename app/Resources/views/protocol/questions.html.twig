{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper row3">
        <main class="hoc container clear"> 
            <div class="btmspace-50 sheet80">
                <h2 class="heading">{{ protocol.name }}</h2>
                {% if not profile_completed %}
                    <p style="color: red">
                        {{ i18n.es.questions_page.profile_not_complete }}<br/>
                        {{ i18n.es.questions_page.please_go_to }} <a href="{{ path('profile_homepage') }}">{{ i18n.es.questions_page.profile_page }}</a> {{ i18n.es.questions_page.fill_the_data }}
                    </p>
                {% else %}
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <input class="btn" type="submit" value="{{ i18n.es.questions_page.generate_protocol }}">
                    {{ form_end(form) }}
                {% endif %}
            </div>
            <div class="clear"></div>
        </main>
    </div>
{% endblock %}
