{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper row3">
        <main class="hoc container clear"> 
            <div class="btmspace-50">
                <h2 class="heading">Comprar {{ name }}</h2>
                {% for question in protocols.uso_redes.questions %}
                    <div id="question_{{ question.id }}">
                        <p>{{ question.question }}</p>
                        <p>
                            {% for answer in question.answers %}
                                <input type="radio" name="answer_{{ question.id }}" value="{{ answer }}"> {{ answer }}</input><br/>
                            {% endfor %}
                        </p>
                    </div>
                {% endfor %}
            </div>
            <div class="clear"></div>
        </main>
    </div>
{% endblock %}
