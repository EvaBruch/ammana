{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper row3">
        <main class="hoc container clear"> 
            <div class="btmspace-50 sheet80">
                <h2 class="heading">Comprar {{ protocol.name }}</h2>
                {% if not profile_completed %}
                    <p style="color: red">
                        Tu perfil no está completo. Debes completarlo antes de generar ningún protocolo.<br/>
                        Por favor, ve a <a href="{{ path('profile_homepage') }}">tu página de perfil</a> y rellena los datos que faltan.
                    </p>
                {% else %}
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <input class="btn" type="submit" value="Generar protocolo">
                    {{ form_end(form) }}
                {% endif %}
            </div>
            <div class="clear"></div>
        </main>
    </div>
{% endblock %}
